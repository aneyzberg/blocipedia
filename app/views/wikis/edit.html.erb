<h1>Edit Wiki</h1>

<div class= "row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter a Wiki title" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter a Wiki body" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
